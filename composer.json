{
  "name": "joipolloi/joipolloi-wp",
  "description": "Joi is a WordPress theme for component-based development using Timber and Advanced Custom Fields.",
  "type": "wordpress-theme",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "joipolloi",
      "email": "dev@joipolloi.com"
    }
  ],
  "require": {
    "php": ">=7.0.0",
    "timber/timber": "^1.8",
    "flyntwp/acf-field-group-composer": "^1.0",
    "erusev/parsedown": "^1.7",
    "rlanvin/php-rrule": "^2.3",
    "nesbot/carbon": "^2.54"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4"
  },
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}/": [
        "type:wordpress-muplugin",
        "type:wordpress-plugin",
        "type:wordpress-theme"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "Joi\\": "wordpress/wp-content/themes/joipolloi/lib/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
