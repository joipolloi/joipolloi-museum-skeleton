<!-- svg template for stars and mask for half stars -->
<svg xmlns="http://www.w3.org/2000/svg"
    width="0"
    height="0"
    fill="currentColor"
    stroke="currentColor"
    class="bi bi-star-fill"
    viewbox="0 0 16 16">
    <defs>
        <mask id="half">
            <rect x="0" y="0" width="16" height="16" fill="white" />
            <rect x="50%" y="0" width="16" height="16" fill="grey" />
        </mask>
        <symbol xmlns="http://www.w3.org/2000/svg" viewbox="0 0 16 16" id="star">
            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
        </symbol>
    </defs>
</svg>
<footer class="Footer mainFooter" is="joi-footer">
    <div class="top">
        <div class="top--wrapper siteWidth">
            <div class="col">
                <h5>
                    Location
                </h5>
                {{ location }}
            </div>
            <div class="col">
                <h5>
                    We are open
                </h5>
                {{ openingHours }}
            </div>
            <div class="col">
                <h5>
                    Stay up to date
                </h5>
                {{ renderComponent('SocialLinks') }}
                <a class="button"
                    href="{{ mailingList.url }}"
                    target="{{ mailingList.target }}"
                    rel="noopener noreferrer">
                    {{ mailingList.title }}
                </a>
            </div>
            <div class="col">
                <h5>
                    Quick links
                </h5>
                {{ renderComponent('NavigationQuickLinks') }}
            </div>
        </div>
    </div>
    <div class="bottom">
        <div class="bottom--wrapper siteWidth">
            <div class="col">
                <h5>
                    Visit our partners
                </h5>
                <div class="partners">
                    <div class="partner">
                        <a href="https://www.northlincs.gov.uk" target="_blank" rel="noopener noreferrer">
                            <img alt="North Lincolnshire Council"
                                src="/wp-content/themes/joipolloi/Components/Footer/Assets/nlc.png"
                                srcset="/wp-content/themes/joipolloi/Components/Footer/Assets/nlc@2x.png 2x" />
                        </a>
                    </div>
                    <div class="partner">
                        <a href="http://www.normanbyhall.co.uk" target="_blank" rel="noopener noreferrer">
                            <img alt="Normanby Hall Country Park"
                                src="/wp-content/themes/joipolloi/Components/Footer/Assets/normanby-hall.png"
                                srcset="/wp-content/themes/joipolloi/Components/Footer/Assets/normanby-hall@2x.png 2x" />
                        </a>
                    </div>
                    <div class="partner">
                        <a href="http://humbermuseums.com" target="_blank" rel="noopener noreferrer">
                            <img alt="Humber Museums Partnership"
                                src="/wp-content/themes/joipolloi/Components/Footer/Assets/humber-museums.png"
                                srcset="/wp-content/themes/joipolloi/Components/Footer/Assets/humber-museums@2x.png 2x" />
                        </a>
                    </div>
                    <div class="partner">
                        <a href="https://www.artscouncil.org.uk" target="_blank" rel="noopener noreferrer">
                            <img alt="Arts Council England"
                                src="/wp-content/themes/joipolloi/Components/Footer/Assets/arts-council.png"
                                srcset="/wp-content/themes/joipolloi/Components/Footer/Assets/arts-council@2x.png 2x" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="col"></div>
            <div class="col">
                {{ renderComponent('GoogleBusiness') }}
            </div>
            <div class="col">
                {{ renderComponent('TripAdvisor') }}
            </div>
        </div>
    </div>
    <div class="links siteWidth">
        {{ renderComponent('NavigationFooter') }}
        {{ renderComponent('JoiPolloiLink') }}
    </div>
</footer>
