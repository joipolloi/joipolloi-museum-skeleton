<div class="CardProductFeature" is="joi-card-product-feature">
    {{ timberSetProduct(post) }}
    <div class="container">
        <div class="media">
            {% if post.thumbnail %}
                {{
                    renderComponent(
                        'Image',
                        {
                            image: post.thumbnail,
                            imageSize: 'shop',
                            removeCrop: true
                        }
                    )
                }}
            {% endif %}
        </div>
        <div class="content">
            {% do action('woocommerce_before_shop_loop_item_title') %}
            <div class="h5">
                {{ post.terms('product_cat')|join(', ') }}
            </div>
            <h2>
                {{ post.title }}
            </h2>
            {% if post.subtitle %}
                <h4>
                    {{ post.subtitle }}
                </h4>
            {% endif %}
            {% if post.short_description %}
                <p>
                    {{ post.short_description }}
                </p>
            {% endif %}
            <div class="priceWrapper">
                {% do action('woocommerce_after_shop_loop_item_title') %}
                {% do action('woocommerce_after_shop_loop_item') %}
            </div>
        </div>
    </div>
</div>
