<div class="BlockCardPostGrid" is="joi-block-card-post-grid">
    <div class="siteWidth">
        {% if fields.title %}
            <h2>
                {{ fields.title }}
            </h2>
        {% endif %}
        {{
            renderComponent(
                'GridPostsArchive',
                {
                    posts: posts,
                    itemComponent: 'CardPost',
                    itemClasses: 'coloured',
                    itemSmallTitle: true
                }
            )
        }}
    </div>
</div>